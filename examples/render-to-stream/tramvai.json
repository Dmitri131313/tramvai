{
  "$schema": "../../node_modules/@tramvai/cli/schema.json",
  "projects": {
    "render-to-stream": {
      "name": "render-to-stream",
      "root": "src",
      "type": "application",
      "commands": {
        "build": {
          "options": {
            "server": "src/index.ts"
          },
          "configurations": {
            "sourceMap": true,
            "modern": true,
            "granularChunks": true,
            "postcss": {
              "config": "src/postcss"
            },
            "fileSystemPages": {
              "enable": true,
              "pagesDir": false
            }
          }
        },
        "serve": {
          "configurations": {
            "hotRefresh": true,
            "modern": true
          }
        }
      }
    }
  }
}
