{
  "$schema": "../../node_modules/@tramvai/cli/schema.json",
  "projects": {
    "fs-routing": {
      "name": "fs-routing",
      "root": "src",
      "type": "application",
      "commands": {
        "build": {
          "options": {
            "server": "src/index.ts"
          },
          "configurations": {
            "sourceMap": true,
            "modern": true,
            "granularChunks": true,
            "postcss": {
              "config": "src/postcss"
            },
            "experiments": {
              "fileSystemPages": {
                "enable": true,
                "pagesDir": false
              }
            }
          }
        },
        "serve": {
          "configurations": {
            "hotRefresh": true,
            "modern": true
          }
        }
      }
    }
  }
}
