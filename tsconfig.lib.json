{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "allowJs": true,
    "strict": false,
    "types": [
      "node",
      "jest",
      "@types/jest"
    ]
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.bench.ts",
    "**/__tests__/**",
    "**/__integration__/**",
    "**/__fixtures__/**"
  ]
}
