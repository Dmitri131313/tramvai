{
  "$schema": "../../../../../schema.json",
  "projects": {
    "app": {
      "name": "app",
      "root": "app",
      "type": "application",
      "commands": {
        "build": {
          "options": {
            "server": "app/server.tsx",
            "serverApiDir": "app/api"
          },
          "configurations": {
            "experiments": {
              "fileSystemPages": {
                "enable": true
              }
            }
          }
        },
        "serve": {
          "configurations": {
            "hotRefresh": true
          }
        }
      }
    },
    "module": {
      "name": "module",
      "root": "module",
      "type": "module"
    }
  }
}
