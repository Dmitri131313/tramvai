{
  "$schema": "./node_modules/@tramvai/cli/schema.json",
  "projects": {
    "{{configEntry.name}}" : {
      "name": "{{configEntry.name}}",
      "root": "src",
      "type": "application",
      "commands": {
        "build": {
          "options": {
            "server": "src/index.ts"
          },
          "configurations": {
            "sourceMap": true,
            "modern": true,
            "granularChunks": true,
            "postcss": {
              "config": "src/postcss"
            },
            "fileSystemPages": {
              "enable": true
            }
          }
        },
        "serve": {
          "configurations": {
            "hotRefresh": true,
            "modern": true
          }
        }
      }
    }
  }
}
